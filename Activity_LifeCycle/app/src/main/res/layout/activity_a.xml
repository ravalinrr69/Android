<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3e677e">


    <TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Activity A"
    android:gravity="center_horizontal"
    android:textColor="#ffffff"
    android:paddingBottom="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="37dp"
            android:layout_weight="1"
            android:shadowColor="#FFFF00"
            android:text="Dialog"
            android:textColor="#000000"
            android:textColorHint="#ffffff"
            android:onClick="startDialog"
            android:layout_marginBottom="60dp"
            android:background="#ffff00"/>

        <Button
            android:id="@+id/activity_b_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:background="#ffff00"
            android:onClick="startActivityB"
            android:text="Start Activity B"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tv_thread_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/thread_counter"
            android:layout_alignBottom="@+id/thread_counter"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:paddingLeft="50dp"
            android:text="Thread Count: "
            android:textColor="#ffffff"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/thread_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_button"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:text="0000"
            android:textColor="#ffffff"
            android:textSize="15dp"/>


    </RelativeLayout>



    <View
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="60dp"/>

    <Button
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="112dp"
        android:background="#000000"
        android:onClick="closeApp"
        android:text="Close App"
        android:textColor="#ffffff" />

</LinearLayout>
